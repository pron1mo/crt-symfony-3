{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Главная{% endblock %}

{% block body %}
<div class="shadow-sm p-4 rounded-2xl overflow-hidden">
    <div class="mb-10 border-t border-b divide-y">
        {% for article in articles %}
        <div class="grid py-8 sm:grid-cols-4">
            <div class="mb-4 sm:mb-0">
                <div class="space-y-1 text-xs font-semibold tracking-wide uppercase">
                    <a href="{{ path('tag', {id: article.tag.id}) }}" class="transition-colors duration-200 text-purple-400 hover:text-purple-800" aria-label="Tag">{{ article.tag.name }}</a>
                    <p class="text-gray-600">{{ article.createdAt|date }}</p>
                </div>
            </div>
            <div class="sm:col-span-3 lg:col-span-2">
                <div class="mb-3">
                    <a href="{{ path('article', {id: article.id}) }}" aria-label="Article" class="inline-block text-black transition-colors duration-200 hover:text-purple-700">
                        <p class="text-3xl font-extrabold leading-none sm:text-4xl xl:text-4xl">
                            {{ article.title }}
                        </p>
                    </a>
                </div>
                <p class="text-gray-700">
                    {{ article.description }}
                </p>
            </div>
        </div>
        {% endfor %}
        {% if navigator.total > navigator.limit %}
            {{ include('components/navigator.html.twig', {route: 'article_page'}) }}
        {% endif %}
    </div>
</div>
{% endblock %}
