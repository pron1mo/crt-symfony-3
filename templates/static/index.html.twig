{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - {{ page.title }}{% endblock %}

{% block body %}
    <div class="w-full bg-gray-100 p-8 rounded-2xl">
        <h1 class="text-purple-700 text-3xl font-bold text-uppercase mb-4">{{ page.title }}</h1>
        <hr class="border-gray-300 mb-8">
        <div class="prose prose-purple">
            {{ page.content|raw }}
        </div>
    </div>
{% endblock %}
